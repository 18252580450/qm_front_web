{{#each document}}
    <div class="kc-search-list-item">
        <div class="row">
            <div class="col-xs-3">
                <img src="../../image/l1.jpg" alt="" class="kc-search-list-img">
            </div>
            <div class="col-xs-6">
                <div class="kc-search-list-text">
                    <p>
                        <span class="label label-danger">热</span>
                        <span class="kc-search-list-title">{{knowledgeName}}</span>
                    </p>
                    <p>
                        <span class="list-main">{{contents}}</span>
                    </p>
                    <p class="list-main">
                        <span>{{createTime}}</span>
                        <span><i class="fa fa-star"></i> 26</span>
                        <span><i class="fa fa-eye"></i> 166</span>
                        <span><i class="fa fa-commenting"></i> 86</span>
                    </p>
                </div>
            </div>
            <div class="col-xs-2" style="text-align: center;">
                {{!-- <span class="kc-search-tags tags-red">结</span>
                <span class="kc-search-tags tags-yellow">问</span>
                <span class="kc-search-tags tags-green">多</span> --}}
                {{checkType knlwType}}
            </div>
            <div class="col-xs-1 kc-search-list-start">
                <span class=""><i class="fa fa-exchange"></i></span>
                <span class="active"><i class="fa fa-star"></i></span>
            </div>
        </div>
    </div>
{{/each}}
